{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-schema-generator/schemas/config.schema.json",
  "productName": "IMF Viewer",
  "version": "1.1.0",
  "identifier": "com.imf.viewer",
  "build": {
    "frontendDist": "../ui",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": []
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "sidecar/*"
    ],
    "fileAssociations": [
      {
        "ext": ["imf"],
        "name": "IMF Container",
        "mimeType": "application/x-imf",
        "role": "Viewer"
      }
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Benjamin Toso (3R489H66PC)",
      "entitlements": null,
      "minimumSystemVersion": "11.0",
      "frameworks": []
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
